@model ExeArthurQII.Models.carro

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Esta é a Area do Veiculo</h1>

<div class="d-flex">
    <div class="col-md-3.5">
        <figure class="card card-product">
            <div class="img-wrap"><img src="~/img/carro.jpeg" width="100%" /></div>
            <figcaption class="info-wrap" style=" padding: 20px; background-color: dimgrey">
                <h4 class="title"><i class="fa fa-car" aria-hidden="true"></i><b>Marca: </b> @Model.fabricante</h4>
                <p class="desc">@Model.nome<br />@Model.categoria</p>
            </figcaption>
        </figure>
    </div>


    <div class="col-md-3 ">
        <figure class="card card-product">
            <div class="img-wrap"><img src="~/img/honda.jpg" width="100%" /></div>
            <figcaption class="info-wrap" style=" padding: 20px; background-color: dimgrey">
                <h4 class="title"><i class="fa fa-motorcycle" aria-hidden="true"></i><b>Marca: </b> Honda</h4>
                <p class="desc">Modelo: CB 750<br />Categoria: Classic</p>
            </figcaption>
        </figure>
    </div>

    <div class="col-md-3.5 ">
        <figure class="card card-product">
            <div class="img-wrap"><img src="~/img/scania.jpg" width="100%" /></div>
            <figcaption class="info-wrap" style=" padding: 20px; background-color: dimgrey">
                <h4 class="title"><i class="fa fa-motorcycle" aria-hidden="true"></i><b>Marca: </b> Scania</h4>
                <p class="desc">Modelo: 113<br />Categoria: Premium</p>
            </figcaption>
        </figure>
    </div>
</div>
